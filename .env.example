# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=cvscreener
POSTGRES_HOST=postgres
POSTGRES_PORT=5434
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Embedder Configuration
EMBEDDER_INPUT_DIR=/data/feed
EMBEDDER_BATCH_SIZE=100
EMBEDDER_CHUNK_SIZE=1000
EMBEDDER_CHUNK_OVERLAP=200
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
EMBEDDER_LOG_LEVEL=INFO

# Application Configuration
APP_MODEL_NAME=gpt-5-mini-2025-08-07
APP_PORT=8000
APP_MAX_HISTORY=10
APP_TOP_K_RESULTS=5
APP_LOG_LEVEL=INFO

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=  # Optional: redis://localhost:6379/0 (uses in-memory if not specified)

# Re-ranking Configuration
RERANK_ENABLED=true
RERANK_TOP_K=20

# Observability Configuration
METRICS_ENABLED=true
METRICS_PORT=9000

# Web UI Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
